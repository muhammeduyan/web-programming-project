@model Book

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">
                Kitap Sil
            </h2>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0">Kitap Adı:</label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0">Kitap Tanımı:</label>
            <input asp-for="Description" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Author" class="p-0">Kitap Yazarı:</label>
            <input asp-for="Author" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0">Fiyat:</label>
            <input asp-for="Price" disabled class="form-control">
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width: 250px;">
            Kitap Sil
        </button>

        <a asp-controller="Book" asp-action="Index" class="btn btn-lg btn-primary" style="width: 250px;">
            Kitaplara Geri Dön
        </a>
    </div>

</form>