@model Book

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">
                Kitap Güncelle
            </h2>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0">Kitap Adı:</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookTypeId" class="p-0">Kitap Türü:</label>
            <select asp-for="BookTypeId" asp-items="ViewBag.BookTypeList" class="form-select"></select>
            <span asp-validation-for="BookTypeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0">Kitap Tanımı:</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author" class="p-0">Kitap Yazarı:</label>
            <input asp-for="Author" class="form-control">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0">Fiyat:</label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width: 250px;">
            Kitap Güncelle
        </button>

        <a asp-controller="Book" asp-action="Index" class="btn btn-lg btn-primary" style="width: 250px;">
            Kitaplara Geri Dön
        </a>
    </div>

</form>