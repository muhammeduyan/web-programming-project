@model List<Book>

@if (TempData["succesful"] != null)
{

    <div class="alert alert-success d-flex align-items-center" role="alert">
    <div>
        @TempData["succesful"]
    </div>
    </div>
}

<div class="container">
    <div class="row pt-3 pb-4">

        <h1>
            Kitaplar
        </h1>
    </div>
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>
                    Id
                </th>
                <th>
                    Kitap Adı
                </th>
                <th>
                    Kitap Tanımı
                </th>
                <th>
                    Kitap Yazarı
                </th>
                <th>
                    Fiyat
                </th>
                <th>
                    Kitap Türü
                </th>
                <th>
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @book.Id
                    </td>
                    <td>
                        @book.Name
                    </td>
                    <td>
                        @book.Description
                    </td>
                    <td>
                        @book.Author
                    </td>
                    <td>
                        @book.Price
                    </td>
                    <td>
                        @book.BookType.Name
                        
                    </td>
                    <td style="text-align: right;">
                        <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@book.Id" type="button"
                            class="btn btn-primary">
                            Güncelle
                        </a>
                        <a asp-controller="Book" asp-action="DeleteBook" asp-route-id="@book.Id" type="button"
                            class="btn btn-danger">
                            Sil
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Book" asp-action="AddBook" class="btn btn-primary btn-lg" type="button">
                Yeni Kitap Oluştur
            </a>
        </div>
    </div>
</div>