@model List<BookType>

@{
    ViewData["Title"] = "Book Type Page";
}

@if (TempData["succesful"] != null)
{

    <div class="alert alert-success d-flex align-items-center" role="alert">
    <div>
        @TempData["succesful"]
    </div>
    </div>
}

<div class="container">
    <div class="row pt-3 pb-4">

        <h1>
            Kitap Türleri
        </h1>
    </div>
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>
                    Id
                </th>
                <th>
                    Kitap Türü
                </th>
                <th>
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var bookType in Model)
            {
                <tr>
                    <td>
                        @bookType.Id
                    </td>
                    <td>
                        @bookType.Name
                    </td>
                    <td style="text-align: right;">
                        <a asp-controller="BookType" asp-action="UpdateBookType" asp-route-id="@bookType.Id" type="button"
                            class="btn btn-primary">
                            Güncelle
                        </a>
                        <a asp-controller="BookType" asp-action="DeleteBookType" asp-route-id="@bookType.Id" type="button"
                            class="btn btn-danger">
                            Sil
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="BookType" asp-action="AddBookType" class="btn btn-primary btn-lg" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>
    </div>
</div>