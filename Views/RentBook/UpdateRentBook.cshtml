@model RentBook

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">
                Kiralama Güncelle
            </h2>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="OgrenciId" class="p-0"></label>
            <input asp-for="OgrenciId" class="form-control">
            <span asp-validation-for="OgrenciId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BookId" class="p-0"></label>
            <select asp-for="BookId" asp-items="ViewBag.BookList" class="form-select"></select>
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-lg btn-primary" style="width: 250px;">
            Kiralama Güncelle
        </button>

        <a asp-controller="RentBook" asp-action="Index" class="btn btn-lg btn-primary" style="width: 250px;">
            Kiralamalara Geri Dön
        </a>
    </div>

</form>