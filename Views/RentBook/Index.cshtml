@model List<RentBook>

@{
    ViewData["Title"] = "Rent Book Page";
}

@if (TempData["succesful"] != null)
{

    <div class="alert alert-success d-flex align-items-center" role="alert">
    <div>
        @TempData["succesful"]
    </div>
    </div>
}

<div class="container">
    <div class="row pt-3 pb-4">

        <h1>
            Kitap Kiralamaları
        </h1>
    </div>
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>
                    Id
                </th>
                <th>
                    Öğrenci Id
                </th>
                <th>
                    Kitap Id
                </th>
                <th>
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var rentBook in Model)
            {
                <tr>
                    <td>
                        @rentBook.Id
                    </td>
                    <td>
                        @rentBook.OgrenciId
                    </td>
                    <td>
                        @rentBook.Book.Name
                    </td>
                    <td style="text-align: right;">
                        <a asp-controller="RentBook" asp-action="UpdateRentBook" asp-route-id="@rentBook.Id" type="button"
                            class="btn btn-primary">
                            Güncelle
                        </a>
                        <a asp-controller="RentBook" asp-action="DeleteRentBook" asp-route-id="@rentBook.Id" type="button"
                            class="btn btn-danger">
                            Sil
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="RentBook" asp-action="AddRentBook" class="btn btn-primary btn-lg" type="button">
                Yeni Kiralama Oluştur
            </a>
        </div>
    </div>
</div>